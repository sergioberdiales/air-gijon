{
  "name": "air-gijon-backend",
  "version": "1.0.0",
  "description": "Backend para el proyecto de calidad del aire de Gijón",
  "main": "server.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node -r dotenv/config server.js",
    "postinstall": "pip3 install -r requirements.txt || echo 'Python dependencies install failed, but continuing...'",
    "test": "jest",
    "update-aqicn": "node update_aqicn.js",
    "cron-update": "node cron_update.js",
    "cron-predictions": "node cron_predictions_fixed.js",
    "update-promedios": "node update_promedios.js",
    "check-env": "node check_env.js",
    "test-db": "node -e \"require('./db').testConnection().then(r => process.exit(r ? 0 : 1))\"",
    "stats": "node -e \"require('./api_aqicn').getDataStats().then(s => s ? console.table(s) : console.log('No data'))\"",
    "debug-cron": "node debug_cron.js",
    "populate-historical": "node scripts/populate_historical.js",
    "generate-historical": "node scripts/generate_historical_data.js",
    "create-manager": "node create_manager.js",
    "generate-sample-data": "node generate_sample_data.js",
    "migrate-predictions": "node migrate_to_new_predictions.js"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vite": "^4.5.14"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0"
  },
  "keywords": [
    "air-quality",
    "gijon",
    "pm25",
    "monitoring",
    "nodejs"
  ],
  "author": "Air Gijón Team",
  "license": "MIT"
}
